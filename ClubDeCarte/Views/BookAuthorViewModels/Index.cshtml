@model PagedList.IPagedList<ClubDeCarte.Models.BookAuthorViewModel>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/Author.css")" rel="stylesheet" type="text/css" />
<h2>Index</h2>

<p>
    @{
        if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Create New", "Create")
        }
    }
</p>

@using (Html.BeginForm())
{
    <p>
        Search your favorite: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}

<table class="table table-hover">
    <tr>

        <th>

        </th>
        <th>
            First Name
        </th>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.OtherAuthorSortParm })
        </th>
        <th>
            @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm })
        </th>
        <th>
            Other Authors
        </th>
        <th>
            Publishing House
        </th>
        <th>
            ISBN
        </th>
        <th>
            Pages
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                <img src="@Url.Content(item.UrlPhotoCover)" width="150" height="200" multiple />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OtherAuthors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingHouse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.BookAuthorViewModelID })
                @{
                    if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.BookAuthorViewModelID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.BookAuthorViewModelID })
                    }
                }
            </td>
        </tr>
    }

</table>

<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount


@Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))