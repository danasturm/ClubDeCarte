@model IEnumerable<ClubDeCarte.Models.BookInBookOfTheWeekViewModel>

@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/Books.css")" rel="stylesheet" type="text/css" />
<h1><center>Cartea acestei saptamani </center></h1>

<p>
    @{
        if (User.IsInRole("Admin"))
        {
            @Html.ActionLink("Create New", "Create")
        }
    }
</p>
<table class="table table-hover">
    <tr>
       
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
     {
        <tr>
            <td>
                <img src="@Url.Content(item.UrlPhotoCover)" width="500" height="700" alt="SomePhoto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
     }

</table>
