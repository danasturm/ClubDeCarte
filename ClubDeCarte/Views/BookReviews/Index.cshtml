@model IEnumerable<ClubDeCarte.Models.BookReview>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<link href="@Url.Content("~/Content/HomePage.css")" rel="stylesheet" type="text/css" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReviewPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TitleReview)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TitleReview)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddedOn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tags)
        </td>
        <td>

            @Html.ActionLink("Details", "Details", new { id = item.BookReviewID })
            @{
                if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookReviewID })
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookReviewID })
                }
            }
        </td>
    </tr>
}

</table>
